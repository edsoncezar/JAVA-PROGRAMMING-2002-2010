package calculo;

public class vida{
  private int idade;

  public void setIdade(int novaIdade){
    idade=novaIdade;
  }

  public int getIdade(){
    return idade;
  }

  public String getPosicionamento(){
    if (idade>=18){
      return "Maior de Idade";
    } else {
      return "Menor de idade";
    }
  }

  public int getDias(){
    return 365*idade;
  }

}

