package muitoutil;

import java.util.*;

public class Calendario {
  private int dia,mes,ano;

  public void setData(int d, int m, int a){  //funcao sem retorno de valores(void)
    dia=d;
    mes=m;
    ano=a;
  }

  public void setData(){
    Date d=new Date();
    dia=d.getDate();
    mes=d.getMonth()+1;
    ano=d.getYear()+1900;
  }



  public String getData(){  //funcao com retorno de valores(return)
    return "("+dia+"/"+mes+"/"+ano+")";
  }
}