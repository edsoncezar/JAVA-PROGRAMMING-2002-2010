<?xml version="1.0" encoding="ISO-8859-1" ?>
<!DOCTYPE taglib
  PUBLIC "-//Sun Microsystems, Inc.//DTD JSP Tag Library 1.2//EN"
  "http://java.sun.com/dtd/web-jsptaglibrary_1_2.dtd">

<taglib>
  <tlib-version>1.0</tlib-version>
  <jsp-version>1.2</jsp-version>
  <short-name>AttArray</short-name>
  <description>
    This is a simple application that creates an array in one tag
    and displays it in another.
  </description>

  <tag>
    <name>defineObjects</name>
    <tag-class>com.wrox.projsp.ch09.CreateAttArray</tag-class>
    <attribute>
      <name>name</name>
      <required>true</required>
    </attribute>
  </tag>

  <tag>
    <name>showarray</name>
    <tag-class>com.wrox.projsp.ch09.ShowAttArray</tag-class>
    <attribute>
      <name>name</name>
      <required>true</required>
    </attribute>
  </tag>
</taglib>
