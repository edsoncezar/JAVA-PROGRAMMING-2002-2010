<?xml version="1.0"?>

<!-- ======================================================================= -->
<!-- JBoss build file                                                       -->
<!-- ======================================================================= -->

<project name="JBoss" default="complete" basedir=".">

    <property environment="env"/>
    <property name="src.dir" value="${basedir}/src/main"/>
    <property name="src.resources" value="${basedir}/src/resources"/>
    <property name="jboss.home" value="${env.JBOSS_HOME}"/>
    <property name="build.dir" value="${basedir}/build"/>
    <property name="build.classes.dir" value="${build.dir}/classes"/>
    <property name="build.compiler" value="classic"/>

  <!-- Build classpath -->
  <path id="classpath">
        <fileset dir="${jboss.home}/client">
            <include name="**/*.jar"/>
        </fileset>
	<pathelement location="${build.classes.dir}"/>
	<!-- So that we can get jndi.properties for InitialContext -->
	<pathelement location="${basedir}/jndi"/>
  </path>

  <!-- =================================================================== -->
  <!-- Prepares the build directory                                        -->
  <!-- =================================================================== -->
  <target name="prepare" >
    <mkdir dir="${build.dir}"/>
    <mkdir dir="${build.classes.dir}"/>
  </target>

  <!-- =================================================================== -->
  <!-- Compiles the source code                                            -->
  <!-- =================================================================== -->
  <target name="compile" depends="prepare">
    <javac srcdir="${src.dir}"
           destdir="${build.classes.dir}"
           debug="on"
           deprecation="on"
           optimize="off"
           includes="**">
            <classpath refid="classpath"/>
    </javac>
  </target>

  <target name="db" depends="compile">
     <delete file="${jboss.home}/server/default/deploy/titandb-ds.xml" quiet="true"/>
     <copy file="titandb-service.xml" todir="${jboss.home}/server/default/deploy" quiet="true"/>
  </target>

  <target name="db.simple" depends="compile">
     <delete file="${jboss.home}/server/default/deploy/titandb-service.xml"/>
     <copy file="titandb-ds.xml" todir="${jboss.home}/server/default/deploy"/>
  </target>

  <target name="ejbjar">
    <jar jarfile="build/titan.jar">
      <fileset dir="${build.classes.dir}">
      	  <include name="com/titan/customer/*.class"/>
      </fileset>
      <fileset dir="${src.resources}/">
          <include name="**/*.xml"/>
      </fileset>
     </jar>
     <copy file="build/titan.jar" todir="${jboss.home}/server/default/deploy"/>
  </target>

  <target name="complete" depends="db,ejbjar">
  </target>

  <target name="simple" depends="db.simple,ejbjar">
  </target>

  <target name="run.client_61" depends="ejbjar">
    <java classname="com.titan.clients.Client_61" fork="yes" dir=".">
      <classpath refid="classpath"/>
      <arg line="${param.pk1} ${param.fn1} ${param.ln1} ${param.pk2} ${param.fn2} ${param.ln2}"/>
    </java>
  </target>

  <!-- =================================================================== -->
  <!-- Cleans up generated stuff                                           -->
  <!-- =================================================================== -->
  <target name="clean" >
    <delete dir="${build.dir}"/>
    <delete file="${jboss.home}/server/default/deploy/titan.jar"/>
    <delete file="${jboss.home}/server/default/deploy/titandb-service.xml"/>
    <delete file="${jboss.home}/server/default/deploy/titandb-ds.xml"/>
  </target>

</project>

